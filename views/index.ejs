<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Box</title>
</head>
<body>
    <img src="https://c.tenor.com/6a_4Q6DHoWcAAAAi/chef-cooking.gif">
    <div class="home">
    <h1 id="index">Recipe Box</h1>
    <button id="add"><a href="/recipes/new">Add Recipe</a></button>
    </div>
    <div class="recipeHome">
    <table>
        <tr>
        <% recipes.forEach(recipe => { %>
            <td>
                <a href="/recipes/<%= recipe._id; %>">
                <%= recipe.recipeTitle; %><br />
                <img src="<%= recipe.imageLink; %>">
            </a>
            <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
                <input id="delete" type="submit" value="Delete"/>
            </form>
            <button id="edit"><a href="/recipes/<%=recipe._id%>/edit">Edit</a></button>
            </td>
        <% }) %>
        </tr>
    </table>
    </div>
</body>
</html>